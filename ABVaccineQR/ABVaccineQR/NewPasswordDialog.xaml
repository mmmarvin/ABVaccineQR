<?xml version="1.0" encoding="utf-8" ?>
<custom:CustomModalFrame xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABVaccineQR.NewPasswordDialog"
             xmlns:custom="clr-namespace:ABVaccineQR.Custom">
    <custom:CustomModalFrame.Children>
        <Label Text="Set Password" TextColor="Black" FontSize="Large" FontAttributes="Bold" Margin="10, 0, 10, 15" />
        <StackLayout Orientation="Horizontal" Margin="10, 0, 10, 0">
            <Label VerticalOptions="Center" Text="Password:" TextColor="Black" FontSize="Small" />
            <Entry x:Name="c_Password1Entry" Text="" HorizontalOptions="FillAndExpand" IsPassword="true" FontSize="Small" MaxLength="1024" />
        </StackLayout>
        <StackLayout Orientation="Horizontal" Margin="10, 0, 10, 15">
            <Label VerticalOptions="Center" Text="Repeat Password:" TextColor="Black" FontSize="Small" />
            <Entry x:Name="c_Password2Entry" Text="" HorizontalOptions="FillAndExpand" IsPassword="true" FontSize="Small" MaxLength="1024" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label HorizontalOptions="FillAndExpand" />
            <Button Text="OK" TextColor="LightSkyBlue" BackgroundColor="White" Clicked="Btn_OKClicked" />
        </StackLayout>
    </custom:CustomModalFrame.Children>
</custom:CustomModalFrame>